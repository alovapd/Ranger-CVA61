{
  "name": "naval-navigation-log",
  "version": "0.4.3",
  "description": "USS Ranger CVA-61 Naval Navigation Deck Log System - Interactive navigation logging with mapping, coordinate tracking, and historical data visualization",
  "main": "index.html",
  "scripts": {
    "dev": "live-server --port=3000 --open=/index.html",
    "build": "npm run minify && npm run optimize",
    "minify": "terser js/**/*.js -o dist/app.min.js --compress --mangle",
    "optimize": "npm run minify-css && npm run copy-assets",
    "minify-css": "cleancss -o dist/styles.min.css css/styles.css",
    "copy-assets": "cp index.html dist/ && cp -r data dist/",
    "lint": "eslint js/**/*.js",
    "lint:fix": "eslint js/**/*.js --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "format": "prettier --write js/**/*.js css/**/*.css *.html",
    "validate": "npm run lint && npm run test",
    "serve:dist": "live-server --port=3001 --open=/index.html --mount=/dist:./dist",
    "analyze": "webpack-bundle-analyzer dist/stats.json",
    "clean": "rm -rf dist/"
  },
  "keywords": [
    "naval",
    "navigation",
    "deck-log",
    "maritime",
    "uss-ranger",
    "coordinates",
    "mapping",
    "leaflet",
    "nautical",
    "vessel-tracking"
  ],
  "author": {
    "name": "Naval Navigation Systems",
    "email": "nav@ussranger.mil"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/naval-systems/navigation-log.git"
  },
  "bugs": {
    "url": "https://github.com/naval-systems/navigation-log/issues"
  },
  "homepage": "https://naval-systems.github.io/navigation-log",
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "clean-css-cli": "^5.6.2",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "live-server": "^1.2.2",
    "prettier": "^3.2.5",
    "terser": "^5.27.0",
    "webpack-bundle-analyzer": "^4.10.1"
  },
  "dependencies": {
    "leaflet": "^1.9.4"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "jest": {
    "testEnvironment": "jsdom",
    "collectCoverageFrom": [
      "js/**/*.js",
      "!js/main.js",
      "!js/**/*.test.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "printWidth": 100
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}